<?xml version="1.0" encoding="utf-8" ?>
<v:MvxContentPage
  x:Class="DR.CeritaReliefAvadana.UI.Pages.SlidesPage"
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:viewModels="clr-namespace:DR.CeritaReliefAvadana.Core.ViewModels.Slides;assembly=DR.CeritaReliefAvadana.Core"
  xmlns:v="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
  xmlns:views="clr-namespace:DR.CeritaReliefAvadana.UI.Views"
  NavigationPage.HasNavigationBar="False"
  x:TypeArguments="viewModels:SlidesViewModel"
>
  <CarouselView
    ItemsSource="{Binding Slides}"
    Position="{Binding InitialSlideIndex}"
    IsScrollAnimated="False"
    Loop="False"
  >
    <CarouselView.ItemTemplate>
      <DataTemplate>
        <views:SlideContentView BindingContext="{Binding}" />
      </DataTemplate>
    </CarouselView.ItemTemplate>
  </CarouselView>
</v:MvxContentPage>
